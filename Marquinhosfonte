class Pessoa:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade
    
    def apresentar(self):
        return f"Olá, eu sou {self.nome} e tenho {self.idade} anos."
    
    def eh_maior_idade(self):
        return self.idade >= 18

# Função para calcular fibonacci
def fibonacci(n):
    if n <= 1:
        return n
    return fibonacci(n-1) + fibonacci(n-2)

# Lista de pessoas
pessoas = [
    Pessoa("Ana", 25),
    Pessoa("João", 17),
    Pessoa("Maria", 30)
]

# Filtrar pessoas maiores de idade
maiores_idade = [p for p in pessoas if p.eh_maior_idade()]

# Exibir resultados
for pessoa in maiores_idade:
    print(pessoa.apresentar())

# Calcular os primeiros 10 números de Fibonacci
print("Sequência de Fibonacci:")
for i in range(10):
    print(f"F({i}) = {fibonacci(i)}")`,
