        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({
                behavior: 'smooth'
            });
        }

        function loadExample(language) {
            const selector = document.getElementById('language-selector');
            const codeEditor = document.getElementById('code-editor');
            const languageIndicator = document.getElementById('language-indicator');
            
            selector.value = language;
            codeEditor.value = codeExamples[language];
            languageIndicator.textContent = language.toUpperCase();
            
            // Update editor colors based on language
            updateEditorStyle(language);
            
            // Scroll to code section
            scrollToSection('linguagens');
        }

        function loadExampleCode() {
            const language = document.getElementById('language-selector').value;
            loadExample(language);
        }

        function loadExampleWithPreview(language) {
            loadExample(language);
            setTimeout(() => previewCode(), 100);
        }

        function updateEditorStyle(language) {
            const codeEditor = document.getElementById('code-editor');
            const colorMap = {
                'html': 'text-orange-400',
                'css': 'text-blue-400',
                'javascript': 'text-yellow-400',
                'python': 'text-green-400',
                'java': 'text-red-400',
                'php': 'text-purple-400'
            };
            
            // Remove all color classes
            Object.values(colorMap).forEach(color => {
                codeEditor.classList.remove(color);
            });
            
            // Add the appropriate color
            codeEditor.classList.add(colorMap[language] || 'text-green-400');
        }

        function previewCode() {
            const language = document.getElementById('language-selector').value;
            const codeEditor = document.getElementById('code-editor');
            const previewFrame = document.getElementById('preview-frame');
            const code = codeEditor.value.trim();
            
            if (!code) {
                previewFrame.srcdoc = `
                    <html>
                        <head>
                            <style>
                                body { 
                                    font-family: Arial, sans-serif; 
                                    padding: 40px; 
                                    background: #f8f9fa;
                                    text-align: center;
                                    color: #666;
                                }
                            </style>
                        </head>
                        <body>
                            <h3>📝 Editor vazio</h3>
                            <p>Digite algum código no editor ou carregue um exemplo para ver a visualização.</p>
                        </body>
                    </html>
                `;
                return;
            }
            
            if (language === 'html' || language === 'css' || language === 'javascript') {
                previewFrame.srcdoc = code;
            } else {
                previewFrame.srcdoc = `
                    <html>
                        <head>
                            <style>
                                body { 
                                    font-family: Arial, sans-serif; 
                                    padding: 20px; 
                                    background: #f8f9fa;
                                    text-align: center;
                                }
                                .info-box {
                                    background: #e3f2fd;
                                    border: 2px solid #2196f3;
                                    border-radius: 10px;
                                    padding: 20px;
                                    margin: 20px 0;
                                }
                                .code-preview {
                                    background: #f5f5f5;
                                    border: 1px solid #ddd;
                                    border-radius: 5px;
                                    padding: 15px;
                                    margin: 15px 0;
                                    text-align: left;
                                    font-family: monospace;
                                    white-space: pre-wrap;
                                    max-height: 200px;
                                    overflow-y: auto;
                                }
                            </style>
                        </head>
                        <body>
                            <div class="info-box">
                                <h2>🔍 Visualização de ${language.toUpperCase()}</h2>
                                <p>Esta linguagem não pode ser executada diretamente no navegador, mas aqui está o código formatado:</p>
                                <div class="code-preview">${code.replace(/</g, '&lt;').replace(/>/g, '&gt;')}</div>
                                <p><small>💡 Para executar este código, você precisaria de um ambiente ${language.toUpperCase()} configurado.</small></p>
                            </div>
                        </body>
                    </html>
                `;
            }
        }

        function clearCode() {
            const codeEditor = document.getElementById('code-editor');
            const previewFrame = document.getElementById('preview-frame');
            
            codeEditor.value = '';
            previewFrame.srcdoc = `
                <html>
                    <head>
                        <style>
                            body { 
                                font-family: Arial, sans-serif; 
                                padding: 40px; 
                                background: #f8f9fa;
                                text-align: center;
                                color: #666;
                            }
                        </style>
                    </head>
                    <body>
                        <h3>🗑️ Editor limpo</h3>
                        <p>Comece digitando seu código ou carregue um exemplo!</p>
                    </body>
                </html>
            `;
        }

        function showLanguageInfo(language) {
            const infos = {
                python: "Python é uma linguagem de programação interpretada que precisa ser executada em um ambiente Python. É muito usada para ciência de dados, inteligência artificial e desenvolvimento web.",
                java: "Java é uma linguagem compilada que roda na JVM (Java Virtual Machine). É muito usada para desenvolvimento de aplicações empresariais e Android.",
                php: "PHP é uma linguagem de script do lado do servidor, muito usada para desenvolvimento web. Precisa de um servidor web com PHP instalado para ser executada."
            };
            
            alert(infos[language] || "Informações não disponíveis para esta linguagem.");
        }

        function copyCode() {
            const codeEditor = document.getElementById('code-editor');
            const text = codeEditor.value;
            
            if (!text.trim()) {
                alert('Não há código para copiar! Digite algo no editor primeiro.');
                return;
            }
            
            navigator.clipboard.writeText(text).then(function() {
                // Show success message
                const button = event.target.closest('button');
                const originalText = button.innerHTML;
                button.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg><span>Copiado!</span>';
                button.classList.remove('bg-blue-600');
                button.classList.add('bg-green-600');
                
                setTimeout(() => {
                    button.innerHTML = originalText;
                    button.classList.remove('bg-green-600');
                    button.classList.add('bg-blue-600');
                }, 2000);
            }).catch(function() {
                alert('Erro ao copiar o código. Tente selecionar e copiar manualmente.');
            });
        }

        function showFormDemo() {
            alert('Este é um formulário de demonstração. Em um site real, esta mensagem seria enviada para o servidor.');
        }

        // Language selector change event
        document.getElementById('language-selector').addEventListener('change', function() {
            const language = this.value;
            const languageIndicator = document.getElementById('language-indicator');
            
            languageIndicator.textContent = language.toUpperCase();
            updateEditorStyle(language);
        });

        // Auto-update preview for web languages
        document.getElementById('code-editor').addEventListener('input', function() {
            const language = document.getElementById('language-selector').value;
            
            // Auto-preview for web languages only
            if (language === 'html' || language === 'css' || language === 'javascript') {
                clearTimeout(window.previewTimeout);
                window.previewTimeout = setTimeout(() => {
                    previewCode();
                }, 1000); // Wait 1 second after user stops typing
            }
        });

        // Initialize Prism highlighting
        document.addEventListener('DOMContentLoaded', function() {
            Prism.highlightAll();
        });
    </script>
</body>
</html>
