        function saudar() {
            const nome = prompt('Qual é o seu nome?') || 'Visitante';
            const agora = new Date();
            const hora = agora.getHours();
            
            let periodo = hora < 12 ? "Bom dia" : hora < 18 ? "Boa tarde" : "Boa noite";
            
